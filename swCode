<div>
<button id="sort" onclick=sort()>Sort</button>
</div>
<script>
function sort(){
 for (i=1; i<7; i++){
	var y = i;
	var x = document.getElementById(y);
	if (x.classList.contains("woman")){
	x.innerHTML = "Princess Leia";
	}
 }
}
</script>
